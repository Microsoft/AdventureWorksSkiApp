<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SkiResort.XamarinApp"
             xmlns:views="clr-namespace:SkiResort.XamarinApp.Views"
             x:Class="SkiResort.XamarinApp.MainPage"
             Title="Adventure Works Ski Resort">

  <ContentPage.Content>
    <Grid>
      <Image Source="home_background.jpg" VerticalOptions="FillAndExpand" Aspect="AspectFill" />
      
      <StackLayout Spacing="0" Padding="0">
        <Label VerticalOptions="CenterAndExpand" />
        <StackLayout Padding="20">
          <Button Text="Login" BackgroundColor="#141414" TextColor="#FFFFFF" />
        </StackLayout>
        <views:WeatherWidget />
      </StackLayout>
    </Grid>
  </ContentPage.Content>

</ContentPage>