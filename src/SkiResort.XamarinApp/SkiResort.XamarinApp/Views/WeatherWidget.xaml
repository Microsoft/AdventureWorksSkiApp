<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SkiResort.XamarinApp.Views"
             x:Class="SkiResort.XamarinApp.Views.WeatherWidget">
  <ContentView.Content>

    <Grid Padding="7">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <local:WeatherWidgetItem Icon="snow.png" Title="Weather Now" Value="Snowing" Grid.Column="0" />
      <local:WeatherWidgetItem Icon="temp.png" Title="Temperature" Value="8/10º F" Grid.Column="1" />
      <local:WeatherWidgetItem Icon="wind.png" Title="Wind" Value="50 mph" Grid.Column="2" />
      <local:WeatherWidgetItem Icon="base.png" Title="Base Depth" Value="30 inches" Grid.Column="3" />
    </Grid>
    
  </ContentView.Content>
</ContentView>
