<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SkiResort.XamarinApp.Views"
             x:Class="SkiResort.XamarinApp.Views.WeatherWidget">
  <ContentView.Resources>
    <ResourceDictionary>

      <Style x:Key="gridStyle" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="#CC000000" />
      </Style>
      
    </ResourceDictionary>
  </ContentView.Resources>
  <ContentView.Content>

    <Grid Padding="7" Style="{StaticResource gridStyle}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <local:WeatherWidgetItem Icon="weatherWidget_snow.png" Title="Weather Now" Value="Snowing" Grid.Column="0" />
      <local:WeatherWidgetItem Icon="weatherWidget_temp.png" Title="Temperature" Value="8/10º F" Grid.Column="1" />
      <local:WeatherWidgetItem Icon="weatherWidget_wind.png" Title="Wind" Value="50 mph" Grid.Column="2" />
      <local:WeatherWidgetItem Icon="weatherWidget_base.png" Title="Base Depth" Value="30 inches" Grid.Column="3" />
    </Grid>
    
  </ContentView.Content>
</ContentView>
