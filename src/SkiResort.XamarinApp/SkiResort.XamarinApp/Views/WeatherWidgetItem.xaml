<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SkiResort.XamarinApp.Views.WeatherWidgetItem">
  <ContentView.Content>

    <StackLayout Orientation="Horizontal">
      <Image Source="{Binding Icon}" />
      <StackLayout>
        <Label Text="{Binding Title}"></Label>
        <Label Text="{Binding Value}"></Label>
      </StackLayout>
    </StackLayout>

  </ContentView.Content>
</ContentView>
