<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SkiResort.XamarinApp.Views.WeatherWidgetItem">
  <ContentView.Content>

    <StackLayout Orientation="Horizontal">
      <Image Source="{Binding Icon}" HeightRequest="25" WidthRequest="25" />
      <StackLayout>
        <Label Text="{Binding Title}" TextColor="#FFFFFF" LineBreakMode="NoWrap" FontSize="10" />
        <Label Text="{Binding Value}" TextColor="#FFFFFF" LineBreakMode="NoWrap" FontSize="13" FontAttributes="Bold" />
      </StackLayout>
    </StackLayout>

  </ContentView.Content>
</ContentView>
