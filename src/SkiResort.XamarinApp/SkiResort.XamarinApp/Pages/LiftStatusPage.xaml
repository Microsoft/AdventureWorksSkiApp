<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SkiResort.XamarinApp.Pages.LiftStatusPage"
             Title="Lift Status">

  <ContentPage.Resources>
    <ResourceDictionary>

      <Style x:Key="mainStackLayoutStyle" TargetType="StackLayout">
        <Setter Property="VerticalOptions" Value="FillAndExpand" />
      </Style>

      <Style x:Key="listViewStyle" TargetType="ListView">
        <Setter Property="VerticalOptions" Value="FillAndExpand" />
      </Style>

    </ResourceDictionary>
  </ContentPage.Resources>
  
  <ContentPage.Content>

    <StackLayout Style="{StaticResource mainStackLayoutStyle}">
      <ListView x:Name="listView" Style="{StaticResource listViewStyle}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ImageCell Text="{Binding Name}" ImageSource="{Binding IconSource}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
    
  </ContentPage.Content>
</ContentPage>